{
  "compilerOptions": {
    /* Base Options: */
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "es2022",
    "allowJs": true,
    "resolveJsonModule": true,
    "moduleDetection": "force",
    "isolatedModules": true,
    "verbatimModuleSyntax": true,
    "module": "NodeNext",
    "allowImportingTsExtensions": true,
    "strict": true,
    "types": ["node","supertest"],
    "noEmit": true,
    "noErrorTruncation": true,
    "lib": ["es2022"],
    "paths": {
      "@/*": ["./src/*"],
      "@db/": ["./src/db/*"]
    }
  }
}
